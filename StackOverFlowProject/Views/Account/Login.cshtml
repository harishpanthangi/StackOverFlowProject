@model StackOverFlowProject.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<section id="loginForm" class="content" data-role="validator">
    <div class="login-box">
        <div class="row">
            <div class="col-md-offset-4 col-md-4 column-gap-md-4">
                <div class="box box-theme">
                    <div class="box-header with-border">
                        <h3 class="box-title">Login</h3>
                    </div>
                    <form novalidate="novalidate" action="/account/login" method="post" class="needs-validation form-horizontal">
                        @Html.AntiForgeryToken()
                        @*<div class="form-group mr-3">
                                <label for="email" class="mr-1">Email</label>
                                <input type="email" class="form-control" id="email" name="Email" required autofocus value="@Model.Email" />
                            </div>
                            <div class="form-group mr-3">
                                <label for="password" class="mr-1">Password</label>
                                <input type="password" class="form-control" id="password" name="Password" required autofocus value="@Model.Password" minlength ="6" />
                            </div>
                            <button class="btn btn-success">Login</button>*@
                        <div class="box-body">
                            <div class="row mb-5">
                                <label for="email" class="control-label required-label col-sm-3">Email</label>
                                <div class="col-sm-9">
                                    <input type="email" class="form-control" id="email" name="Email" required autofocus value="@Model.Email" />
                                </div>
                            </div>
                            <div class="row mb-5">
                                <label for="password" class="control-label required-label col-sm-3">Password</label>

                                <div class="col-sm-9">
                                    <input type="password" class="form-control" id="password" name="Password" required autofocus value="@Model.Password" minlength="6" />
                                </div>
                            </div>
                        </div>
                        <div class="box-footer text-center">
                            <button type="submit" class="btn btn-success ml-95">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $("a[href='/home/login']").attr("id", "active");
</script>
